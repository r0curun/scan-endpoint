javascript:(async()=>{try{const d=document.createElement('div');d.style.cssText='position:fixed;top:0;left:0;width:100%;height:100%;background:rgba(0,0,0,0.9);color:#0f0;font-family:monospace;z-index:99999;padding:20px;overflow:auto;box-sizing:border-box;';d.innerHTML=`<h2 style="color:#0f0;">Directory Scanner Pro</h2><pre id="log" style="height:100px;overflow:auto;background:#111;padding:10px;border:1px solid #0f0;"></pre><textarea id="out" style="width:100%;height:60%;background:#000;color:#0f0;border:1px solid #0f0;font-family:monospace;" readonly></textarea><button onclick="this.parentElement.remove()" style="position:absolute;top:10px;right:10px;background:#000;color:#0f0;border:1px solid #0f0;padding:5px 10px;cursor:pointer;">Cerrar</button>`;document.body.appendChild(d);const log=e=>document.getElementById('log').textContent+=e+'\n';const out=document.getElementById('out');const paths=new Set();const valid=p=>/^[\x20-\x7E]+$/.test(p)&&!/\s/.test(p)&&p.length>1&&p.length<200&&(p.startsWith('/')||p.startsWith('./')||p.startsWith('../'));const extract=h=>[...h.matchAll(/["'`](\/|\.\.\/|\.\/|#)[^"'`\s]+["'`]/g)].map(m=>m[0].slice(1,-1)).filter(valid);const fetchText=async u=>{try{const r=await fetch(u,{credentials:'omit'});return r.ok?await r.text():null}catch{return null;}};const resources=performance.getEntriesByType('resource').map(e=>e.name);for(const url of resources){const path=new URL(url,location).pathname;if(!paths.has(path))log(`Scanning: ${path}`);const html=await fetchText(url);if(html)extract(html).forEach(p=>paths.add(p));}extract(document.documentElement.outerHTML).forEach(p=>paths.add(p));document.querySelectorAll('script[src]').forEach(s=>{const src=s.src;if(src){const path=new URL(src,location).pathname;log(`+ Script: ${path}`);fetchText(src).then(t=>t&&extract(t).forEach(p=>paths.add(p)));}});const unique=[...paths].sort();out.value=unique.join('\n');log(`\nok! ${unique.length} unique routes found.\n.Copy from below`);out.select();out.focus();}catch(e){alert('Error: '+e.message);}})();

